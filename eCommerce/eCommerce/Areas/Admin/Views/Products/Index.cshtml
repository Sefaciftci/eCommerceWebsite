@model IEnumerable<eCommerce.Entities.Urun>

@{
    ViewData["Title"] = "Ürünler";
}

<h1>Ürünler</h1>

<p>
    <a class="btn btn-outline-primary" asp-action="Create">Yeni Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Formu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fiyat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Miktari)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aromasi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UretimYili)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SatistaMi)
            </th>
            
            
            <th>
                @Html.DisplayNameFor(model => model.Marka)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Formu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fiyat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Miktari)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aromasi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UretimYili)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SatistaMi)
            </td>
           
            
            <td>
                @Html.DisplayFor(modelItem => item.Marka.Adi)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
