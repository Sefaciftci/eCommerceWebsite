@model Urun

@{
    ViewData["Title"] = "Ürün Düzenle";
}

<h1>Ürün Düzenle</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Resim1" />
            <div class="form-group">
                <label asp-for="MarkaId" class="control-label"></label>
                <select asp-for="MarkaId" class="form-control" asp-items="ViewBag.MarkaId"></select>
                <span asp-validation-for="MarkaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Formu" class="control-label"></label>
                <input asp-for="Formu" class="form-control" />
                <span asp-validation-for="Formu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fiyat" class="control-label"></label>
                <input asp-for="Fiyat" class="form-control" />
                <span asp-validation-for="Fiyat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Miktari" class="control-label"></label>
                <input asp-for="Miktari" class="form-control" />
                <span asp-validation-for="Miktari" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aromasi" class="control-label"></label>
                <input asp-for="Aromasi" class="form-control" />
                <span asp-validation-for="Aromasi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UretimYili" class="control-label"></label>
                <input asp-for="UretimYili" class="form-control" />
                <span asp-validation-for="UretimYili" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="SatistaMi" /> @Html.DisplayNameFor(model => model.SatistaMi)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Notlar" class="control-label"></label>
                <input asp-for="Notlar" class="form-control" />
                <span asp-validation-for="Notlar" class="text-danger"></span>
            </div>
            <!--
            <div class="form-group mt-2">
                <label asp-for="Resim1" class="control-label"></label>
                <input asp-for="Resim1" class="form-control" type="file" />
                <span asp-validation-for="Resim1" class="text-danger"></span>
                <img src="/Img/Products/@Model.Resim1" alt="" height="34 " />
            </div>
            -->
            
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

